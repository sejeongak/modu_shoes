<!-- LOGIN -->
<section class="auth">
    <div class="title">LOGIN</div>
    <form action="/auth/login" method="post">
        <div class="row">
            <label for="id" class="field_label">아이디</label>
            <input autofocus autocomplete="off" type="text" id="id" name="id" placeholder="아이디를 입력해주세요">
        </div>
        <div class="row">
            <label for="pw" class="field_label">비밀번호</label>
            <input autocomplete="off" type="password" id="pw" name="pw" placeholder="비밀번호를 입력해주세요">
        </div>
        <div class="find_user">
            <a>아이디 찾기</a>
            <div class="bar"></div>
            <a>비밀번호 찾기</a>
        </div>
        <button type="submit" class="login_button"><strong>로그인</strong></button>
    </form>
</section>
